<p id="notice"><%= notice %></p>

<h1>Departamento</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Edificio</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartaments.each do |apartament| %>
      <tr>
        <td><%= apartament.number %></td>
        <td><%= apartament.building_id %></td>
        <td><%= apartament.building.name %></td>                
        <td><%= link_to 'Ver', apartament, class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_apartament_path(apartament), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Eliminar', apartament, method: :delete, data: { confirm: 'Esta seguro?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Departamento', new_apartament_path, class: "btn btn-primary"  %>
